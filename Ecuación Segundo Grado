package hacer_en_casa;
import java.util.Scanner;
public class SegundoGrado {

public static void main(String[] args) {
		
		int a, b, c;
		int resultadoPost, resultadoNeg;
		Scanner scanner  = new Scanner(System.in);
		System.out.println("Introduzca 3 números que serán las variable A, B y C de la ecuación de segundo grado:  ");
		a = scanner.nextInt();
		b = scanner.nextInt();	
		c = scanner.nextInt();
		resultadoPost = ((-b)+((b^2-4*a*c)^1/2))/(2*a);
		resultadoNeg = ((-b)-((b^2-4*a*c)^1/2))/(2*a);
		System.out.println("El primer resultado de la ecuación es " +resultadoPost+ " y el segundo es " +resultadoNeg);
	}
}
