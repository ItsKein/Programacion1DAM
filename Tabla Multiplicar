package hacer_en_casa;
import java.util.Scanner;
public class tablamultiplicar {
	
	public static void main(String[] args) {
		int num, resultado, multiplicacion;
		Scanner sc = new Scanner(System.in);
		System.out.println("Introduzca un n√∫mero y aparecera la tabla de multiplicar de dicho numero: ");
		num = sc.nextInt();
		multiplicacion = 0;
		resultado = 0;
		while (resultado < num*10) {
			resultado = (num*multiplicacion);
			System.out.println(num+" x "+multiplicacion+" = "+resultado);
			multiplicacion = (multiplicacion + 1);
		}
	}


}
